<h1>Your Pirate</h1>
  <div class="pirate">
    <h3>name: <%= @pirates.name %></h3>
    <h4>height: <%= @pirates.height %></h4>
    <h4>weight: <%= @pirates.weight %></h4>
  </div>
  
<h2>Pirate's first ship</h2>
    <% @ships.each.with_index do |ship, index| %>
      <div class="ship">
        <% if index == 0%>
          <p>Name: <%= ship.name%></p>
          <p>Type: <%= ship.type%></p>
          <p>Booty: <%= ship.booty%></p>
        <%end%>
      </div>
    <%end%>

<h2>Pirate's second ship</h2>
  <% @ships.each.with_index do |ship, index| %>
      <div class="ship">
        <% if index == 1%>
          <p>Name: <%= ship.name%></p>
          <p>Type: <%= ship.type%></p>
          <p>Booty: <%= ship.booty%></p>
        <%end%>
      </div>
    <%end%>
